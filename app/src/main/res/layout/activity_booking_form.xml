<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ed820f">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Form"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="40dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:hint="name"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:hint="email"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:hint="mobile"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:hint="How Many Tickets"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:hint="Transaction ID"
                android:background="#f3f3f3"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="Choose a Hall"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textColor="#000"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"/>
            <Spinner
                android:id="@+id/hall_list"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:entries="@array/halls"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="Select Show Time"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textColor="#000"
                android:paddingLeft="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"/>
            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="80dp">
                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="12.00-3.00"
                    android:textSize="23dp"
                    android:textColor="#000"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="12.00-3.00"
                    android:textSize="23dp"
                    android:textColor="#000"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </RadioGroup>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:textSize="20dp"
                android:text="submit"
                android:id="@+id/submitbutton"
                android:textColor="#ec07ec"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
